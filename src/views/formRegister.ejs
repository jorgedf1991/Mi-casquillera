<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs', {title: 'Registro'}) %>


    <body>
        <!--Inicio cabecera-->
        <%- include('partials/header.ejs') %>
            <!--Fin cabecera-->
            <div id="formRegister">
                <div id="box-form">
                    <form action="/user/create" method="post" enctype="multipart/form-data">
                        <div class="box-register">
                            <input type="text" name="name" placeholder="Indica tu nombre" value="<%= locals.oldData ? oldData.name : null%>">
                            <% if (locals.errors && errors.name) { %>
                                <div class="error-validation">
                                    <%= errors.name.msg %>
                                </div> 
                                <% } %>
                        </div>

                        <div class="box-register">
                            <input type="password" name="password" placeholder="Indica tu password">
                            <% if (locals.errors && errors.password) { %>
                                <div class="error-validation">
                                    <%= errors.password.msg %>
                                </div> 
                                <% } %>
                        </div>

                        <div class="box-register">
                            <input type="email" name="email"  placeholder="Indica tu email" value="<%= locals.oldData ? oldData.email : null%>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="error-validation">
                                    <%= errors.email.msg %>
                                </div> 
                                <% } %>
                        </div>

                        <div class="box-register">
                            <select name="select" id="">
                                <% countries.forEach(country => { %>
                                 <option><%= country.name.common %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="box-imageUsers">
                            <h3>Sube tu foto</h3>
                            <div class="box-register">
                                <input type="file" name="imageUsers">
                            </div>
                        </div>

                        <div class="box-register">
                            <div class="box-button">
                                <button type="submit">Crear</button>
                                <button type="reset">Borrar</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!--Inicio Footer-->
            <div class="clearfix"></div>
            <%- include('partials/footer.ejs') %>

                <!--Fin Footer-->

                <!--Script-->
                <script src="/js/navScript.js"></script>
    </body>

</html>